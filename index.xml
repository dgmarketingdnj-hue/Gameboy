<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Earn Game</title>
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background: #000;
            color: white;
            margin: 0;
            padding: 20px;
        }
        #tap-button {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background: gold;
            margin: 50px auto;
            font-size: 50px;
            border: none;
            cursor: pointer;
        }
        #points {
            font-size: 40px;
            margin: 20px;
        }
        button {
            padding: 10px 20px;
            font-size: 18px;
            margin: 10px;
        }
    </style>
</head>
<body>
    <h1>Tap to Earn Points!</h1>
    <div id="points">Points: 0</div>
    <button id="tap-button" onclick="tap()">ðŸ’° TAP ðŸ’°</button>
    <br>
    <button onclick="watchAd()">Watch Ad for +100 Points</button>

    <script>
        let points = 0;
        const pointsDisplay = document.getElementById('points');

        function tap() {
            points += 10;
            updatePoints();
        }

        function watchAd() {
            alert("Ad watched! +100 points");
            points += 100;
            updatePoints();
        }

        function updatePoints() {
            pointsDisplay.innerText = `Points: ${points}`;
        }

        if (window.Telegram && Telegram.WebApp) {
            Telegram.WebApp.ready();
            Telegram.WebApp.expand();
        }
    </script>
</body>
</html>
